<h1 class="mb-4 text-xl font-bold">Users</h1>

<table class="min-w-full bg-white border border-gray-200 rounded-lg">
  <thead>
    <tr>
      <th class="px-4 py-2 text-left font-bold">Name</th>
      <th class="px-4 py-2 text-left font-bold">Email</th>
      <th class="px-4 py-2 text-left font-bold">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr class="<%= i.even? ? "bg-gray-50" : "bg-white" %>">
        <td class="px-4 py-2 align-middle"><%= user.name %></td>
        <td class="px-4 py-2 align-middle"><%= user.email %></td>
        <td class="px-4 py-2 align-middle space-x-2 whitespace-nowrap">
          <%= link_to "Show", admin_user_path(user), class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to "Edit", edit_admin_user_path(user), class: "text-yellow-600 hover:text-yellow-800" %>
          <%= button_to "Delete", admin_user_path(user), method: :delete, class: "text-red-600 hover:text-red-800", form: { data: { turbo_confirm: "Are you sure?" } } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-6">
  <%= link_to "New User", new_admin_user_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>
