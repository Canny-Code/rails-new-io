<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <div class="px-4 sm:px-6 lg:px-8">
            <div class="mt-8 flow-root">
              <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">

                  <!-- Header -->
                  <div class="sm:flex sm:items-center mb-8">
                    <div class="sm:flex-auto">
                      <h1 class="text-2xl font-semibold text-gray-900">Ingredients</h1>
                      <p class="mt-2 text-sm text-gray-700">A list of all ingredients available for recipes.</p>
                    </div>
                    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                      <%= render Buttons::Primary::Component.new(
                        text: "Add new ingredient",
                        path: new_ingredient_path
                      ) %>
                    </div>
                  </div>

                  <!-- Table -->
                  <table class="min-w-full divide-y divide-gray-300">
                    <thead>
                      <tr>
                        <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Name & Category</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                        <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                          <span class="sr-only">Actions</span>
                        </th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 bg-white">
                      <% @ingredients.each do |ingredient| %>
                        <tr>
                          <td class="whitespace-nowrap py-5 pl-4 pr-3 text-sm sm:pl-0">
                            <div class="flex items-center">
                              <div class="ml-4">
                                <div class="font-medium text-gray-900">
                                  <%= link_to ingredient.name, ingredient_path(ingredient) %>
                                </div>
                                <div class="mt-1 text-gray-500">
                                  <%= ingredient.category %>
                                </div>
                              </div>
                            </div>
                          </td>
                          <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
                            <%= truncate(ingredient.description, length: 140) %>
                          </td>
                          <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
                            <div class="flex justify-end">
                              <!-- Edit -->
                              <%= link_to edit_ingredient_path(ingredient) do %>
                                <span class="sr-only">Edit ingredient</span>
                                <svg class="w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="800px" height="800px" viewBox="0 0 24 24" fill="none">

                                  <g id="SVG_edit" stroke-width="0"/>
                                  <g id="SVG_edit" stroke-linecap="round" stroke-linejoin="round"/>

                                  <g id="SVG_edit"> <path fill-rule="evenodd" clip-rule="evenodd" d="M21.1213 2.70705C19.9497 1.53548 18.0503 1.53547 16.8787 2.70705L15.1989 4.38685L7.29289 12.2928C7.16473 12.421 7.07382 12.5816 7.02986 12.7574L6.02986 16.7574C5.94466 17.0982 6.04451 17.4587 6.29289 17.707C6.54127 17.9554 6.90176 18.0553 7.24254 17.9701L11.2425 16.9701C11.4184 16.9261 11.5789 16.8352 11.7071 16.707L19.5556 8.85857L21.2929 7.12126C22.4645 5.94969 22.4645 4.05019 21.2929 2.87862L21.1213 2.70705ZM18.2929 4.12126C18.6834 3.73074 19.3166 3.73074 19.7071 4.12126L19.8787 4.29283C20.2692 4.68336 20.2692 5.31653 19.8787 5.70705L18.8622 6.72357L17.3068 5.10738L18.2929 4.12126ZM15.8923 6.52185L17.4477 8.13804L10.4888 15.097L8.37437 15.6256L8.90296 13.5112L15.8923 6.52185ZM4 7.99994C4 7.44766 4.44772 6.99994 5 6.99994H10C10.5523 6.99994 11 6.55223 11 5.99994C11 5.44766 10.5523 4.99994 10 4.99994H5C3.34315 4.99994 2 6.34309 2 7.99994V18.9999C2 20.6568 3.34315 21.9999 5 21.9999H16C17.6569 21.9999 19 20.6568 19 18.9999V13.9999C19 13.4477 18.5523 12.9999 18 12.9999C17.4477 12.9999 17 13.4477 17 13.9999V18.9999C17 19.5522 16.5523 19.9999 16 19.9999H5C4.44772 19.9999 4 19.5522 4 18.9999V7.99994Z" fill="#4d4c4c"/> </g>
                                </svg>
                              <% end %>

                              <!-- Delete -->
                              <%= button_to ingredient_path(ingredient), 
                                  method: :delete,
                                  class: "hover:text-gray-900 pl-4",
                                  form: { data: { turbo_confirm: "Are you sure?" } } do %>
                                <span class="sr-only">Delete ingredient</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="800px" height="800px" viewBox="0 0 24 24" fill="none" class="w-6 h-6 text-gray-400">
                                  <g id="SVG_delete"> <path d="M10 12V17" stroke="#3e3d3d" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/> 
                                    <path d="M14 12V17" stroke="#3e3d3d" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/> 
                                    <path d="M4 7H20" stroke="#3e3d3d" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/> 
                                    <path d="M6 10V18C6 19.6569 7.34315 21 9 21H15C16.6569 21 18 19.6569 18 18V10" stroke="#3e3d3d" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/> 
                                    <path d="M9 5C9 3.89543 9.89543 3 11 3H13C14.1046 3 15 3.89543 15 5V7H9V5Z" stroke="#3e3d3d" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/> 
                                  </g>
                                </svg>
                              <% end %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
