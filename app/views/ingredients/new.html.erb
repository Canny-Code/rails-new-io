<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">New Ingredient</h2>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= render Buttons::Tertiary::Component.new(
        text: "Back to Ingredients",
        path: ingredients_path
      ) %>
    </div>
  </div>

  <% if params[:onboarding_step].present? && !current_user.onboarding_completed %>
    <%= render_onboarding_explanation(params[:onboarding_step]) %>
    <div class="flex w-full gap-12">
      <!-- Left sidebar (1/3) -->
      <div class="w-1/3">
        <%= turbo_frame_tag "onboarding_sidebar" do %>
          <%= render_onboarding_sidebar(params[:onboarding_step]) %>
        <% end %>
      </div>

      <!-- Main content (2/3) -->
      <div class="w-2/3">
        <%= render "form", ingredient: @ingredient %>
      </div>
    </div>
  <% else %>
    <div class="mt-8 ">
      <%= render "form", ingredient: @ingredient %>
    </div>
  <% end %>
</div>
