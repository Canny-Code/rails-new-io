<div class="container mx-auto px-4 py-8">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-bold">
      Log Entries for <%= @generated_app.name %>
    </h1>
    <%= link_to "Back to App", generated_app_path(@generated_app),
          class: "text-blue-600 hover:text-blue-800" %>
  </div>
  <turbo-cable-stream-source
    channel="Turbo::StreamsChannel"
    signed-stream-name="<%= Turbo::StreamsChannel.signed_stream_name("#{@generated_app.to_gid}:app_generation_log_entries") %>">
  </turbo-cable-stream-source>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="divide-y divide-gray-200" id="app_generation_log_entries">
      <%= render partial: "app_generation/log_entries/log_entry", collection: @log_entries %>
    </div>
  </div>
</div>
