<!-- Terminal Window -->
<div class="bg-[#dfe8f0] rounded-t-lg shadow-2xl overflow-hidden border border-gray-300 w-full max-w-4xl mx-auto">
  <!-- Terminal Header -->
  <div class="px-4 py-3 flex items-center">
    <div class="flex space-x-2">
      <div class="w-3 h-3 bg-[#3BB662] inline-block rounded-full"></div>
      <div class="w-3 h-3 bg-[#E5C30F] inline-block rounded-full"></div>
      <div class="w-3 h-3 bg-[#E75448] inline-block rounded-full"></div>
    </div>
  </div>
  <!-- Terminal Content -->
  <div id="rails-new-output-container"
          style="background-color: #30353A;"
          class="p-6 font-mono">
    <p id="rails-new-output-text"
          class="text-gray-800 text-sm leading-relaxed">
      <span class="text-green-600 inline-block"><%= current_user.github_username %>@railsnew:$ </span>
      <code class="text-gray-400 inline-block">rails new </code>
      <code id="app-name-in-command-line" class="text-white inline-block">my-next-big-thing</code>
      <code id="api-flag" class="inline-block"></code>
      <code data-controller="generated-output" id="database-choice" class="text-white inline-block"></code>
      <code data-controller="generated-output" id="javascript-choice" class="text-white inline-block"></code>
      <code data-controller="generated-output" id="css-choice" class="text-white inline-block"></code>
      <code data-controller="generated-output" id="rails-flags" class="text-white"></code>
    </p>
  </div>
</div>
